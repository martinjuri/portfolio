---
import { Image } from 'astro:assets';
import abeka from '@/images/abeka.png';
import carbonneutral from '@/images/carbon-neutral.png';
import prevenet from '@/images/prevenet.png';
import sancorclientes from '@/images/sancor-clientes.png';

interface Project {
	title: string;
	image: ImageMetadata;
	preview: string;
	status: string;
}

const projects: Project[] = [
	{
		title: 'Abeka',
		image: abeka as ImageMetadata,
		preview: 'https://www.abeka.com/',
		status: 'Desarrollador frontend',
	},
	{
		title: 'Carbon Neutral+',
		image: carbonneutral as ImageMetadata,

		preview: 'https://www.carbonneutralplus.com/',
		status: 'Desarrollador frontend',
	},
	{
		title: 'Sancor Clientes',
		image: sancorclientes as ImageMetadata,

		preview: 'https://www.sancorseguros.com.ar/autogestion',
		status: 'Lider t√©cnico',
	},
	{
		title: 'Prevenet',
		image: prevenet as ImageMetadata,

		preview: 'https://www.prevencionart.com.ar/',
		status: 'Desarrollador frontend',
	},
];
---

<section id="projects" class="py-12 border-t border-[#ffffff10] text-[var(--white)]">
	<div class="max-w-5xl mx-auto">
		<h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">Algunos proyectos</h2>
		<h3 class="text-4xl md:text-5xl font-medium mb-8">Trabajos</h3>

		<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
			{
				projects.map((project) => (
					<div class="group">
						<a href={project.preview} target="_blank" rel="noopener noreferrer" class="block">
							<div class="rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300 mb-4">
								<Image
									src={project.image}
									alt={project.title}
									class="w-full h-48 md:h-72 object-cover group-hover:scale-105 transition-transform duration-300"
								/>
							</div>
							<div class="flex items-center px-3">
								<div class="flex-grow">
									<h4 class="text-2xl font-semibold">{project.title}</h4>
									<span class="py-1 text-sm text-[var(--white-icon)]">{project.status}</span>
								</div>
								<div class="flex gap-2 ml-auto">
									<a
										target="_blank"
										href={project.preview}
										aria-label="Preview"
										class="size-14 flex justify-center items-center text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
									>
										<svg
											xmlns="http://www.w3.org/2000/svg"
											viewBox="0 0 24 24"
											fill="currentColor"
											class="size-7"
										>
											<path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z" />
										</svg>
									</a>
								</div>
							</div>
						</a>
					</div>
				))
			}
		</div>
	</div>
</section>
